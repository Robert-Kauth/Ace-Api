extends layout.pug

include utils.pug

block content
	+validationErrorSummary(errors)
	form(action='/signup', method='post')
		input(type='hidden', name='_csrf', value=csrfToken)
		+field('First Name', 'first_name', user.first_name)
		+field('Last Name', 'last_name', user.last_name)
		+field('Email', 'email', user.email, 'email')
		+field('Password', 'password', null, 'password')
		+field('Confirm Password', 'confirm_password', null, 'password')
		button Submit
	.btn-ctrl: a(href='/login') Already have an account? Login!
