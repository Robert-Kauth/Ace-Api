doctype html
html
	head
		block head
			title= title
			link(rel='stylesheet', href='/stylesheets/index.css')
			link(rel='stylesheet', href='/stylesheets/search.css')
			link(rel='preconnect', href='https://fonts.googleapis.com')
			link(rel='preconnect', href='https://fonts.gstatic.com', crossorigin)
			link(
				href='https://fonts.googleapis.com/css2?family=Spectral&display=swap',
				rel='stylesheet'
			)
	#body_container
		#body_content
			body
				nav
					#nav_container
						#left_nav
							a(href='/')
								#logo_div
									img#ace_logo(
										src='https://res.cloudinary.com/dt8q1ngxj/image/upload/v1632286717/Ace%20Api/ace_eobkk1.png'
									)
									span#ace_api Ace API
							a.nav_link(href='/') Home
							if locals.authenticated
								a.nav_link(href='/toolboxes') My Toolboxes
						#wrap
							#search_nav
								form#search_bar(action='/search', method='get', autocomplete='off')
									input#search_box(type='text', name='box', placeholder='Search')
									button#search_button(type='submit') üîç
						#right_nav
							if locals.authenticated
								span#welcome Happy Coding, #{ user.first_name }!
								form.form-inline.pr-4(action='/logout', method='post')
									button#logout_button(type='submit') Logout
							else
								a.nav_link(href='/login') Login
								a.nav_link(href='/signup') Sign Up
