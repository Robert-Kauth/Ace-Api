doctype html
html
  head
      block head
        title= title
        link(rel='stylesheet' href='/stylesheets/index.css')
        link(rel='stylesheet' href='/stylesheets/search.css')
  div(id="body_container")
    div(id="body_content")
      body
        nav
          div(id="nav_container")
            div(id="left_nav")
              a(href="/" )
                div(id="logo_div")
                  img(id="ace_logo" src="https://res.cloudinary.com/dt8q1ngxj/image/upload/v1632286717/Ace%20Api/ace_eobkk1.png")
                  span(id="ace_api") Ace API
              a(class="nav_link" href="/") Home
              if locals.authenticated
                a(class="nav_link" href="/toolboxes") My Toolboxes
            div(id="wrap")
              div(id="search_nav")
                form(action="/search" method="get" id="search_bar" autocomplete="off")
                  input(type="text" name="box" id="search_box" placeholder="Search")
                  button(type="submit" id="search_button") üîç
            div(id="right_nav")
              if locals.authenticated
                span(id="welcome") Happy Coding, #{user.first_name}!
                form(class='form-inline pr-4' action='/logout' method='post')
                  button(id='logout_button' type='submit') Logout
              else
                  a(class="nav_link" href='/login') Login
                  a(class="nav_link" href='/signup') Sign Up
        block content
