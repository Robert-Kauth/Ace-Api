extends layout.pug

include utils.pug

block content
	link(rel='stylesheet', href='/stylesheets/login.css')
	#login_body
		#login_form
			h1 Login to Ace API
			+validationErrorSummary(errors)
			form.auth-form(action='/login', method='post')
				input(type='hidden', name='_csrf', value=csrfToken)
				+field('Email', 'email', email, 'email')
				+field('Password', 'password', null, 'password')
				button#loginButton.auth-btn Login
			form(action='/demo', method='post')
				button#demoLogin.auth-btn Demo User
			.btn-ctrl: a(href='/signup') Don't have an account? Click to Sign Up!
