mixin validationErrorSummary(errors)
	if errors
		.alert.alert-danger(role='alert')
			p The following error(s) occurred:
			ul
				each error in errors
					li= error

mixin field(labelText, fieldName, fieldValue, fieldType = 'text', required)
	.form-group
		label(for=fieldName)= labelText
		input.form-ctrl(
			type=fieldType,
			required,
			id=fieldName,
			name=fieldName,
			value=fieldValue
		)

mixin toolbox_card
	each toolbox in toolboxes
		.tbc_ctrl: a#tbc_link(href=`/toolboxes/${toolbox.id}`) #{ toolbox.name }
	.tbc_ctrl: a#tbc_link(href='/toolboxes/create-toolbox') Create a Toolbox

	span#create_button Create a Toolbox AJAX Test
		form#create-toolbox-test-form(
			action='/toolboxes/create-toolbox',
			method='post',
			style='display: none'
		)
			input(type='hidden', name='_csrf', value=csrfToken)
			label(for='new_toolbox') New Toolbox Name:
			input(type='text', name='new_toolbox')
			button#create-toolbox-submit(type='submit') Add New Toolbox
			button cancel

mixin api_card(api, toolboxes)
	div
		.api_card_top
			span.card_logo_container
				a(href=`/apis/${api.id}`)
					img.card_logo_img(src=`${api.logo_url}`, alt=`${api.name}`)
			span.api_card_content
				a(href=`/apis/${api.id}`)
					h2= api.name
				span Implement this API
				select
					each toolbox in toolboxes
						option(value=toolbox.id)= toolbox.name
		section.api_description
			p= api.description

mixin api_card_concat(api, toolboxes)
	div
		#logoImp_container
			img#logo(src=`${api.logo_url}`, alt=`${api.name}`)
		a(href=`/apis/${api.id}`)
			h2#api_name= api.name
		div Category: #{ api.Tag.name }
		if api.free
			div Free to Use
		else
			div Paid
		div: a#ext_website(href=`${api.website}`, target='_blank') Website
